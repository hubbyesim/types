{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "rootDir": "./",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "isolatedModules": true
    },
    "include": ["src/**/*", "test/**/*"]
  }  