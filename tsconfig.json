{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}