{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}